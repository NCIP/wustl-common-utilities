<security-config>
	<upt-context-name>
		upt
	</upt-context-name>
	<application-list>
	<!-- For every application using the security api an entry should be made here -->
		<application>
			<context-name>
				catissuecore
			</context-name>
			<authentication>
				<authentication-provider-class>
				
				</authentication-provider-class>
			</authentication>
			<authorization>
				<authorization-provider-class>
					edu.wustl.security.impl.UserProvisioningManagerImpl
				</authorization-provider-class>
				<hibernate-config-file>
					@@hibernate-config-file@@
				</hibernate-config-file>
			</authorization>
		</application>
	</application-list>
</security-config>
