<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.wustl.common.domain.AuditEvent"
        table="CATISSUE_AUDIT_EVENT"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_AUDIT_EVENT_PARAM_SEQ</param>
            </generator>
        </id>

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <property
            name="userId"
            type="long"
            update="true"
            insert="true"
            column="USER_ID"
        />
<!-- ADD NEW COLUMN AS EVENT_TYPE FOR STORING THE EVENT TYPE. -->        
        <property
            name="eventType"
            type="string"
            update="true"
            insert="true"
            column="EVENT_TYPE"
            length="50"
        />
        
        <property
            name="comments"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />

        <property
            name="ipAddress"
            type="string"
            update="true"
            insert="true"
            column="IP_ADDRESS"
            length="20"
        />

        <set
            name="auditEventLogCollection"
            table="CATISSUE_AUDIT_EVENT_LOG"
            lazy="false"
            inverse="false"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="AUDIT_EVENT_ID"
              />

              <one-to-many
                  class="edu.wustl.common.domain.AbstractAuditEventLog"
              />
        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AuditEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
