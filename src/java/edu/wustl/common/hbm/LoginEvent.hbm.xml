<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.wustl.common.domain.LoginEvent"
        table="CATISSUE_LOGIN_AUDIT_EVENT_LOG"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">LOGIN_EVENT_PARAM_SEQ</param>
            </generator>
        </id>

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="LOGIN_TIMESTAMP"
        />

        <property
            name="sourceId"
            type="long"
            update="true"
            insert="true"
            column="LOGIN_SOURCE_ID"
        />

        <property
            name="userLoginId"
            type="long"
            update="true"
            insert="true"
            column="USER_LOGIN_ID"
            length="20"
        />

         <property
            name="ipAddress"
            type="string"
            update="true"
            insert="true"
            column="LOGIN_IP_ADDRESS"
            length="20"
        />

        <property
            name="isLoginSuccessful"
            type="boolean"
            update="true"
            insert="true"
            column="IS_LOGIN_SUCCESSFUL"
        />
		<property
            name="loginName"
            type="string"
            update="true"
            insert="true"
            column="LOGIN_NAME"
            length="50"
        />
        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AuditEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
